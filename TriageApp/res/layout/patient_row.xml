<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:background="@drawable/item_selector" 
    android:padding="10dp">
    <!-- android:background="?android:attr/selectableItemBackground" -->
     
    
    <TextView
        android:id="@+id/list_row1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:textSize="16sp"
        android:layout_toLeftOf="@+id/list_row2" 
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginRight="4dp"/>
        <!-- android:textAppearance="?android:attr/textAppearanceListItem" 
        android:textSize="12sp"/>
         android:background="@color/ics_swatch_blue02"
         android:maxWidth="1.0sp"-->
        
    <TextView
        android:id="@+id/list_row2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/list_row1"
        android:layout_alignParentRight="true" 
        android:textSize="16sp"/>
        <!--android:layout_alignParentTop="true"-->
        
    <TextView
        android:id="@+id/list_row3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_row2"
        android:layout_alignParentRight="true" 
        android:textSize="16sp"/>
        <!--android:layout_alignStart="@+id/list_row1"-->

</RelativeLayout>